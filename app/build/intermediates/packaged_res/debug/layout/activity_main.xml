<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    android:backgroundTint="#E6C5C5"
    android:backgroundTintMode="multiply"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:freezesText="false"
        android:text="Portfolio balance"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#A3A0A0"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.148"
        tools:ignore="TouchTargetSizeCheck" />


    <Button
        android:id="@+id/button"
        android:layout_width="190dp"
        android:layout_height="115dp"
        android:layout_marginStart="-5dp"
        android:background="@drawable/top_up_btn"
        android:drawableTop="@drawable/top_up"
        android:drawablePadding="-30dp"
        android:drawableTint="#050505"
        android:hapticFeedbackEnabled="true"
        android:paddingTop="30dp"
        android:soundEffectsEnabled="true"
        android:text="top up"
        android:textAlignment="center"
        app:guidelineUseRtl="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/checkedTextView"
        android:layout_width="240dp"
        android:layout_height="67dp"
        android:checkMark="@drawable/background_1"
        android:checked="true"
        android:text="$15.657,34"
        android:textColor="#FDFBFB"
        android:textDirection="firstStrongRtl"
        android:textIsSelectable="true"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.169"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.79" />

    <ImageButton
        android:id="@+id/hide_show_button"
        android:layout_width="42dp"
        android:layout_height="31dp"
        android:background="@drawable/ic_hide_show"
        android:backgroundTint="#B9C2F640"
        android:text="Hide/Show"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.823"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.757" />

    <Button
        android:id="@+id/button3"
        android:layout_width="190dp"
        android:layout_height="115dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/withdraw_btn"
        android:drawableTop="@drawable/ic_withdraw_logo"
        android:drawablePadding="-30dp"
        android:drawableTint="#050505"
        android:paddingTop="30dp"
        android:text="Withdraw"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:background="#00FFFFFF"
        android:contentDescription="TODO"
        android:contextClickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.56"
        app:srcCompat="@drawable/avatar" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:background="#00FFFFFF"
        android:contentDescription="TODO"
        android:contextClickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.887"
        app:layout_constraintStart_toEndOf="@+id/imageButton7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046"
        app:srcCompat="@drawable/notification_bell" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Ui_recyclerview"
        android:layout_width="414dp"
        android:layout_height="331dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="114dp"
        android:layout_height="27dp"
        android:text="Share portfolio"
        android:textAlignment="viewEnd"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/Ui_recyclerview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="DuplicateIds" />

    <ImageButton
        android:id="@+id/middle_button"
        android:layout_width="71dp"
        android:layout_height="69dp"
        android:background="@drawable/middle_button_"
        android:foreground="@drawable/middle_button"
        app:layout_constraintBottom_toBottomOf="@+id/Ui_recyclerview"
        app:layout_constraintEnd_toEndOf="@+id/Ui_recyclerview"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintStart_toStartOf="@+id/Ui_recyclerview"
        app:layout_constraintTop_toTopOf="@+id/Ui_recyclerview"
        app:layout_constraintVertical_bias="0.882" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="70dp"
        android:layout_height="19dp"
        android:background="@drawable/middle_button_"
        android:text="+12.1%"
        android:textAlignment="center"
        android:textColor="#66D83D"
        android:textDirection="locale"
        android:textIsSelectable="false"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkedTextView"
        app:layout_constraintVertical_bias="0.333" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="48dp"
        android:layout_height="22dp"
        android:text="for today"
        android:textAlignment="center"
        android:textColor="#B5A9A9"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/checkedTextView"
        app:layout_constraintVertical_bias="0.379" />

</androidx.constraintlayout.widget.ConstraintLayout>